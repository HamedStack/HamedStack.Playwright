{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./",
    "module": "commonjs",
    "outDir": "./dist/commonjs",
    "target": "ES2015",
    "lib": ["ESNext", "DOM"],
    "types": ["playwright", "node"],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "declarationMap": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist"]
}
